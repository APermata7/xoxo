<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvDetail"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDetail"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Detail Film"
                    app:layout_constraintStart_toEndOf="@+id/btnBack"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Poster -->
            <ImageView
                android:id="@+id/imagePoster"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Movie poster"
                app:srcCompat="@drawable/placeholder_movie" />

            <!-- Tombol Upload -->
            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Gambar"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- Progress Upload -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="4dp" />

            <!-- Judul Film -->
            <EditText
                android:id="@+id/textJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judul Film"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:backgroundTint="@android:color/white"
                android:layout_marginTop="16dp"
                android:enabled="false"/>

            <!-- Info -->
            <EditText
                android:id="@+id/textInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Info (Genre | Tahun | Durasi)"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:backgroundTint="@android:color/white"
                android:enabled="false"/>

            <!-- Deskripsi -->
            <EditText
                android:id="@+id/textDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi Film"
                android:minLines="4"
                android:gravity="top"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:backgroundTint="@android:color/white"
                android:enabled="false"/>

            <!-- Pemain -->
            <EditText
                android:id="@+id/textPemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pemain"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:backgroundTint="@android:color/white"
                android:enabled="false"/>

            <!-- Sutradara -->
            <EditText
                android:id="@+id/textSutradara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sutradara"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:backgroundTint="@android:color/white"
                android:enabled="false"/>

            <!-- Tombol Aksi: Simpan, Edit, Hapus -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hapus" />
            </LinearLayout>

            <!-- Tombol Favorite, Bookmark, Share -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite"
                    android:background="@android:color/transparent"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bookmark"
                    android:background="@android:color/transparent"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    android:background="@android:color/transparent"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
